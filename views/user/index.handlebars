<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h3 class="home_title">Welcome back, {{user.profile.name}}!</h3>
        <h5>Base Info:</h5>
        <form class="form form-horizontal" id="password-form">
            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">Password: </label>
                <div class="col-sm-7">
                    <input type="password" class="form-control" id="password" placeholder="Old Password" />
                </div>
            </div>
            <div class="form-group">
                <label for="new_password" class="col-sm-2 control-label">Reset: </label>
                <div class="col-sm-7">
                    <input type="password" class="form-control" id="new_password" placeholder="New Password" />
                </div>
            </div>
            <div class="form-group">
                <label for="confirm_new_password" class="col-sm-2 control-label">Confirm: </label>
                <div class="col-sm-7">
                    <input type="password" class="form-control" id="confirm_new_password" placeholder="Repeat New Password" />
                </div>
                <div class="col-sm-3">
                    <button class="btn btn-default btn-primary" type="button" id="password_btn">Change Password</button>
                </div>
            </div>
            <div class="form-group hidden" id="password-error-container">
                <div class="alert alert-danger text-goes-here col-md-4 col-md-offset-4">
                </div>
            </div>
            <div class="form-group hidden" id="password-result-container">
                <div class="alert alert-success text-goes-here col-md-4 col-md-offset-4"">
                </div>
            </div>
        </form>
        <form class="form form-horizontal" id="email-form">
            <div class="form-group">
                <label for="email" class="col-sm-2 control-label">Email: </label>
                <div class="col-sm-7">
                    <input type="email" class="form-control" id="email" value="{{user.profile.email}}" />
                </div>
                <div class="col-sm-3">
                    <button class="btn btn-default btn-primary" type="button" id="email_btn">Change Email</button>
                </div>
            </div>
            <div class="form-group hidden" id="email-error-container">
                <div class="alert alert-danger text-goes-here col-md-4 col-md-offset-4">
                </div>
            </div>
            <div class="form-group hidden" id="email-result-container">
                <div class="alert alert-success text-goes-here col-md-4 col-md-offset-4">
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row" id="preferences">
    <div class="col-md-8 col-md-offset-2">
        <h5>Preferences: </h5>
        <div>
            <ul class="nav nav-tabs">
                <li role="presentation" class="active"><a href="#Genre" aria-controls="genre" role="tab" data-toggle="tab">Genre</a></li>
                <li role="presentation"><a href="#Actor" aria-controls="actor" role="tab" data-toggle="tab">Actor</a></li>
                <li role="presentation"><a href="#keywords" aria-controls="keywords" role="tab" data-toggle="tab">Keywords</a></li>
                <li role="presentation"><a href="#Director" aria-controls="director" role="tab" data-toggle="tab">Director</a></li>
                <li role="presentation"><a href="#releaseYear" aria-controls="year" role="tab" data-toggle="tab">Year</a></li>
                <li role="presentation"><a href="#ageRating" aria-controls="rating" role="tab" data-toggle="tab">Age Rating</a></li>
            </ul>
            
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="Genre">
                    {{#if user.preferences.Genre.length}}
                        <ul class="nav nav-pills" role="tablist" id="genre_table">
                            {{#each user.preferences.Genre}}
                                <li role="presentation"><a value="{{this}}">{{this}}<button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button></a></li>
                            {{/each}}
                        </ul>
                    {{/if}}
                </div>
                <div role="tabpanel" class="tab-pane" id="Actor">
                    {{#if user.preferences.Actor.length}}
                        <ul class="nav nav-pills" role="tablist" id="actor_table">
                            {{#each user.preferences.Actor}}
                                <li role="presentation"><a value="{{this}}">{{this}}<button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button></a></li>
                            {{/each}}
                        </ul>
                    {{/if}}
                    <div class="col-lg-12">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for Actor">
                            <span class="input-group-btn">
                                <button class="btn btn-default search_attr" type="button">Search</button>
                            </span>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="keywords">
                    {{#if user.preferences.keywords.length}}
                        <ul class="nav nav-pills" role="tablist" id="keywords_table">
                            {{#each user.preferences.keywords}}
                                <li role="presentation"><a value="{{this}}">{{this}}<button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button></a></li>
                            {{/each}}
                        </ul>
                    {{/if}}
                    <div class="col-lg-12">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for Keyword">
                            <span class="input-group-btn">
                                <button class="btn btn-default search_attr" type="button">Search</button>
                            </span>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="Director">
                    {{#if user.preferences.Director.length}}
                        <ul class="nav nav-pills" role="tablist" id="director_table">
                            {{#each user.preferences.Director}}
                                <li role="presentation"><a value="{{this}}">{{this}}<button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button></a></li>
                            {{/each}}
                        </ul>
                    {{/if}}
                    <div class="col-lg-12">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for Director">
                            <span class="input-group-btn">
                                <button class="btn btn-default search_attr" type="button">Search</button>
                            </span>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="releaseYear">
                    {{#if user.preferences.releaseYear.length}}
                        <ul class="nav nav-pills" role="tablist" id="year_table">
                            {{#each user.preferences.releaseYear}}
                                <li role="presentation"><a value="{{this}}">{{this}}<button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button></a></li>
                            {{/each}}
                        </ul>
                    {{/if}}
                </div>
                <div role="tabpanel" class="tab-pane" id="ageRating">
                    {{#if user.preferences.ageRating.length}}
                        <ul class="nav nav-pills" role="tablist" id="rating_table">
                            {{#each user.preferences.ageRating}}
                                <li role="presentation"><a value="{{this}}">{{this}}<button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button></a></li>
                            {{/each}}
                        </ul>
                    {{/if}}
                </div>
            </div>
        <div>
    </div>
</div>